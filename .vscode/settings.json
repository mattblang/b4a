// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.DS_Store": true,
        "**/.idea": true,
        "**/.vscode": true,
        
        "**/*.js": {"when": "$(basename).ts"},
        "**/*.map": {"when": "$(basename).map"}
    }
}